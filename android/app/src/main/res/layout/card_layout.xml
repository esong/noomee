<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--<ImageView-->
            <!--android:id="@+id/imageView1"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/powered_by_yelp_white"-->
            <!--android:background="@color/colorPrimary"-->
            <!--android:text="contact det"-->
            <!--android:gravity="center_vertical"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:textSize="14dp"/>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp">
            <com.facebook.widget.ProfilePictureView
                android:id="@+id/profile_picture"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="@string/user_icon" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">
                <TextView
                    android:textSize="12sp"
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textSize="12sp"
                    android:id="@+id/time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/restaurant_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/restaurant_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="24dp"
                android:paddingTop="12dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I am going to eat at XXX at xxx pm on XXX day"
                    android:gravity="center_vertical"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/event_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/people_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxx and yyy are going"
                    android:gravity="center_vertical"
                    android:textSize="12dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:orientation="horizontal">

            <Button android:id="@+id/going_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join"
                android:textSize="11sp"
                android:textColor="@color/colorPrimaryDark"
                style="?android:attr/borderlessButtonStyle"/>

            <Button android:id="@+id/_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:textSize="11sp"
                android:textColor="@color/colorPrimaryDark"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>